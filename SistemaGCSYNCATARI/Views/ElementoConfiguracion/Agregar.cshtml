@model SistemaGCSYNCATARI.Models.Elemento_Configuracion
@{
    ViewBag.Title = "Agregar";
}

<h2>Agregar / Editar</h2>

<nav class="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/ElementoConfiguracion/Index">Elemento de Configuración</a></li>
        <li class="breadcrumb-item active">@(Model.Id_elementoconfiguracion > 0 ? Model.Codigo : "Nuevo Registro")</li>
    </ol>
</nav>

@using (Html.BeginForm("Guardar", "ElementoConfiguracion", FormMethod.Post, new { id = "frm-categoria" }))
{
    @Html.HiddenFor(x => x.Id_elementoconfiguracion)
    <div class="card">
        <div class="card-header">Informacion de Elemento de Configuración</div>
        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(x => x.Codigo)
                @Html.TextBoxFor(x => x.Codigo, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Codigo, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Nombre)
                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "label label-danger" })
            </div>

        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-primary">Crear ECS</button>
            <a href="~/ElementoConfiguracion" class="btn btn-danger">Cancelar</a>
        </div>
        <br /><br /><br />


    </div>
}

