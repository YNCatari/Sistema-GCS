@model List<SistemaGCS.Models.Miembro_Proyecto>
@{
    ViewBag.Title = "Index";
}

<!-- Page header -->
<dv class="full-box page-header">
    <h3 class="text-left">

        <a href="~/Miembro_Proyecto/Agregar" class="btn btn-success">Registrar Nuevo </a>
        <i class="fas fa-clipboard-list fa-fw"></i> &nbsp; Administracion de Miembros de Proyectos
    </h3>

</dv>
<!--CONTENT-->
<!-- Content here-->
<div class="container-fluid">
    @using (Html.BeginForm("Index", "Miembro_Proyecto", FormMethod.Post))
    {
    }
    <div class="table-responsive">
        <table id="datatable" class="display" style="width:100%">
            <thead>
                <tr class="text-center">

                    <th>#</th>

                    <th>USUARIO</th>
                    <th>ROL</th>
                    <th>PROYECTO</th>
                    <th>OPCIONES</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr class="text-center">
                    <td>@(item.Id_miembro)</td>
                    <td>@(item.Usuario.Nombre), @(item.Usuario.Apellido)</td>
                    <td>@(item.Rol.Nombre)</td>
                    <td>@(item.Proyecto.Nombre)</td>
                    <td>
                        <a onclick="return confirm('Esta Seguro que desea Actualizar Datos del registro?')" href="~/Miembro_Proyecto/Agregar/@item.Id_miembro" class="btn btn-primary">Editar</a>
                        @*<a onclick="return confirm('Esta Seguro que desea Cancelar el registro?')" href="~/Miembro_Proyecto" class="btn btn-danger">Cancelar</a>*@
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


