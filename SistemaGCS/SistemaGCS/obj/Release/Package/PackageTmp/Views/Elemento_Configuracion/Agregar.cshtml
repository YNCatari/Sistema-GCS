@model SistemaGCS.Models.Elemento_Configuracion
@{ ViewBag.Title = "Agregar";
    List<SistemaGCS.Models.Fase> fase = ViewBag.Fase;
    List<SistemaGCS.Models.Cronograma_Elemento> cronoele = ViewBag.CE;

    


}



<nav class="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Elemento_Configuracion/Index">Usuario</a></li>
        <li class="breadcrumb-item active">@(Model.Id_elementoconfiguracion > 0 ? Model.Nombre +"," + Model.Nomenclatura : "Nuevo Registro")</li>
    </ol>
</nav>

@using (Html.BeginForm("Guardar", "Elemento_Configuracion", FormMethod.Post, new { id = "frm-categoria" }))
{
@Html.HiddenFor(x => x.Id_elementoconfiguracion)
                <div class="card">
                    <div class="card-header">Informacion del Elemento Configuracion</div>
                    <div class="card-body">

                        <div class="form-group">
                            @Html.LabelFor(x => x.Codigo)
                            @Html.TextBoxFor(x => x.Codigo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Codigo, null, new { @class = "label label-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Nombre)
                            @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "label label-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Nomenclatura)
                            @Html.TextBoxFor(x => x.Nomenclatura, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Nomenclatura, null, new { @class = "label label-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Id_fase)
                            <select name="Id_fase" class="form-control">
                                <option @(Model.Id_fase.Equals("") ? "selected" : "") value="">--Seleccione fase--</option>
                                @foreach (var t in fase)
                                {
                                 <option @(Model.Id_fase.Equals(t.Id_fase) ? "selected" : "")
                                        value="@t.Id_fase">
                                    @t.Nombre
                                 </option>
                                }
                            </select>
                            @Html.ValidationMessageFor(x => x.Id_fase, null, new { @class = "label label-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Url)
                            @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Url, null, new { @class = "label label-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Id_cronogramaelemento)
                            <select name="Id_cronogramaelemento" class="form-control">
                                <option @(Model.Id_cronogramaelemento.Equals("") ? "selected" : "") value="">--Seleccione fase--</option>
                                @foreach (var t in cronoele)
                                {
                                 <option @(Model.Id_fase.Equals(t.Id_cronogramaelemento) ? "selected" : "")
                                        value="@t.Id_cronogramaelemento">
                                    @t.FechaInicio - @t.Fechafin
                                 </option>
                                }
                            </select>
                            @Html.ValidationMessageFor(x => x.Id_cronogramaelemento, null, new { @class = "label label-danger" })
                        </div>


                    </div>

                    <div class="text-right">
                        <button type="submit" class="btn btn-primary">GUARDAR</button>
                        <a href="~/Elemento_Configuracion" class="btn btn-danger">CANCELAR</a>
                    </div>
                    <br /><br /><br />
                </div>}

