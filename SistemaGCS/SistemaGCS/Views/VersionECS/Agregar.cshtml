@model SistemaGCS.Models.Version_ECS
@{
    ViewBag.Title = "Agregar";
    List<SistemaGCS.Models.Miembro_Proyecto> metodologias = ViewBag.listaobjMP;

    List<SistemaGCS.Models.Elemento_Configuracion> ec = ViewBag.listaobjEC;

}

<h2>Agregar / Editar</h2>

<nav class="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/VersionECS/Index">Fase</a></li>
        <li class="breadcrumb-item active">@(Model.Id_version > 0 ? Model.Version : "Nuevo Registro")</li>
    </ol>
</nav>

@using (Html.BeginForm("Guardar", "VersionECS", FormMethod.Post, new { id = "frm-fase" }))
{
    @Html.HiddenFor(x => x.Id_version)
    <div class="card">
        <div class="card-header">Informacion de Nueva Fase</div>
        <div class="card-body">

            <div class="form-group">
                @Html.LabelFor(x => x.Version)
                @Html.TextBoxFor(x => x.Version, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Version, null, new { @class = "label label-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Id_elementoconfiguracion)
                <select name="Id_tipousuario" class="form-control">
                    <option @(Model.Id_elementoconfiguracion.Equals("") ? "selected" : "") value="">--Seleccione Elemento Configuracion--</option>
                    @foreach (var t in ec)
                    {
                        <option @(Model.Id_elementoconfiguracion.Equals(t.Id_elementoconfiguracion) ? "selected" : "")
                                value="@t.Codigo">
                            @t.Codigo
                        </option>
                    }
                </select>
                @Html.ValidationMessageFor(x => x.Id_elementoconfiguracion, null, new { @class = "label label-danger" })
            </div>


            <div class="form-group">
                @Html.LabelFor(x => x.FechaInicio)
                @Html.TextBoxFor(x => x.Version, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Version, null, new { @class = "label label-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.FechaTermino)
                @Html.TextBoxFor(x => x.Version, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Version, null, new { @class = "label label-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Id_miembro)
                <select name="Id_tipousuario" class="form-control">
                    <option @(Model.Id_miembro.Equals("") ? "selected" : "") value="">--Seleccione Miembro--</option>
                    @foreach (var t in metodologias)
                    {
                        <option @(Model.Id_miembro.Equals(t.Id_miembro) ? "selected" : "")
                                value="@t.Id_miembro">
                            @t.Id_miembro
                        </option>
                    }
                </select>
                @Html.ValidationMessageFor(x => x.Id_miembro, null, new { @class = "label label-danger" })
            </div>




        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-primary">GUARDAR</button>
            <a href="~/Fase" class="btn btn-danger">CANCELAR</a>
        </div>
        <br /><br /><br />


    </div>
