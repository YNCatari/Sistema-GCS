@model SistemaGCS.Models.Cronograma_Elemento
@{
    ViewBag.Title = "Agregar";
    List<SistemaGCS.Models.Elemento_Configuracion> tipoeleconfi = ViewBag.tipomiembro;
    List<SistemaGCS.Models.Proyecto> tipopro = ViewBag.Ec;

    

}

<h2>Agregar / Modificar</h2>

<nav class="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Cronograma_Elemento/Index">Cronograma Elemento</a></li>
        <li class="breadcrumb-item active">@(Model.Id_cronoele > 0 ? Model.Fechainicio : "Nuevo Registro")</li>
    </ol>
</nav>

@using (Html.BeginForm("Guardar", "Cronograma_Elemento", FormMethod.Post, new { id = "frm-categoria" }))
{
    @Html.HiddenFor(x => x.Id_cronoele)
    <div class="card">
        <div class="card-header">Informacion del Usuario</div>
        <div class="card-body">


            <div class="form-group">
                @Html.LabelFor(x => x.Id_proyecto)
                <select name="Id_proyecto" class="form-control">
                    <option @(Model.Id_proyecto.Equals("") ? "selected" : "") value="">--Seleccione--</option>
                    @foreach (var t in tipopro)
                    {
                        <option @(Model.Id_proyecto.Equals(t.Id_proyecto) ? "selected" : "")
                                value="@t.Id_proyecto">
                            @t.Nombre
                        </option>
                    }
                </select>
                @Html.ValidationMessageFor(x => x.Id_proyecto, null, new { @class = "label label-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Id_elementoconfiguracion)
                <select name="Id_elementoconfiguracion" class="form-control">
                    <option @(Model.Id_elementoconfiguracion.Equals("") ? "selected" : "") value="">--Seleccione--</option>
                    @foreach (var t in tipoeleconfi)
                    {
                        <option @(Model.Id_elementoconfiguracion.Equals(t.Id_elementoconfiguracion) ? "selected" : "")
                                value="@t.Id_elementoconfiguracion">
                            @t.Nombre
                        </option>
                    }
                </select>
                @Html.ValidationMessageFor(x => x.Id_elementoconfiguracion, null, new { @class = "label label-danger" })
            </div>


            <div class="form-group">
                @Html.LabelFor(x => x.Fechainicio)
                @Html.TextBoxFor(x => x.Fechainicio, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Fechainicio, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Fechafin)
                @Html.TextBoxFor(x => x.Fechafin, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Fechafin, null, new { @class = "label label-danger" })
            </div>



        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a href="~/Cronograma_Elemento" class="btn btn-danger">Cancelar</a>
        </div>
        <br /><br /><br />


    </div>
}

