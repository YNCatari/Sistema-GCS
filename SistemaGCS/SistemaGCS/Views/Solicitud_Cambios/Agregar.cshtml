@model SistemaGCS.Models.Solicitud_Cambios
@{
    ViewBag.Title = "Agregar";
    List<SistemaGCS.Models.Proyecto> tiporoyecto = ViewBag.TipoProyecto;
    List<SistemaGCS.Models.Miembro_Proyecto> tipomiembro = ViewBag.TipoMiembro;

    
}

<h2>Agregar / Modificar</h2>

<nav class="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Solicitud_Cambios/Index">Solicitud de Cambios</a></li>
        <li class="breadcrumb-item active">@(Model.Id_solicitud_cambios > 0 ? Model.Codigo: "Nuevo Registro")</li>
    </ol>
</nav>

@using (Html.BeginForm("Guardar", "Solicitud_Cambios", FormMethod.Post, new { id = "frm-categoria" }))
{
    @Html.HiddenFor(x => x.Id_solicitud_cambios)
    <div class="card">
        <div class="card-header">Informacion del Proyecto</div>
        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(x => x.Codigo)
                @Html.TextBoxFor(x => x.Codigo, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Codigo, null, new { @class = "label label-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Fecha)
                @Html.TextBoxFor(x => x.Fecha, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Fecha, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Objetivo)
                @Html.TextBoxFor(x => x.Objetivo, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Objetivo, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Descripcion)
                @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Descripcion, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Respuesta)
                @Html.TextBoxFor(x => x.Respuesta, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Respuesta, null, new { @class = "label label-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Estado)
                <select name="ESTADO" class="form-control">
                    <option @(Model.Estado == "A" ? "Selected" : "") value="A">Activo</option>
                    <option @(Model.Estado == "I" ? "Selected" : "") value="I">Inactivo</option>
                </select>
                @Html.ValidationMessageFor(x => x.Estado, null, new { @class = "label label-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Id_proyecto)
                <select name="Id_proyecto" class="form-control">
                    <option @(Model.Id_proyecto.Equals("") ? "selected" : "") value="">--Seleccione--</option>
                    @foreach (var t in tiporoyecto)
                    {
                        <option @(Model.Id_proyecto.Equals(t.Id_proyecto) ? "selected" : "")
                                value="@t.Id_proyecto">
                            @t.Nombre
                        </option>
                    }
                </select>
                @Html.ValidationMessageFor(x => x.Id_proyecto, null, new { @class = "label label-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Id_miembro)
                <select name="Id_miembro" class="form-control">
                    <option @(Model.Id_miembro.Equals("") ? "selected" : "") value="">--Seleccione--</option>
                    @foreach (var t in tipomiembro)
                    {
                        <option @(Model.Id_miembro.Equals(t.Id_miembro) ? "selected" : "")
                                value="@t.Id_miembro">
                            @t.Id_miembro
                        </option>
                    }
                </select>
                @Html.ValidationMessageFor(x => x.Id_miembro, null, new { @class = "label label-danger" })
            </div>





        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a href="~/Solicitud_Cambios" class="btn btn-danger">Cancelar</a>
        </div>
        <br /><br /><br />


    </div>
}
