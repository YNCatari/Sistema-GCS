@model SistemaGCS.Models.Fase
@{
    ViewBag.Title = "Agregar";
    List<SistemaGCS.Models.Metodologia> metodologias = ViewBag.Tipo;
}

<h2>Agregar / Editar</h2>

<nav class="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Fase/Index">Fase</a></li>
        <li class="breadcrumb-item active">@(Model.Id_fase > 0 ? Model.Nombre +"," + Model.Nombre : "Nuevo Registro")</li>
    </ol>
</nav>

@using (Html.BeginForm("Guardar", "Fase", FormMethod.Post, new { id = "frm-fase" }))
{
    @Html.HiddenFor(x => x.Id_fase)
    <div class="card">
        <div class="card-header">Informacion de Nueva Fase</div>
        <div class="card-body">

            <div class="form-group">
                @Html.LabelFor(x => x.Nombre)
                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "label label-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Id_metodologia)
                <select name="Id_tipousuario" class="form-control">
                    <option @(Model.Id_metodologia.Equals("") ? "selected" : "") value="">--Seleccione Metodologia--</option>
                    @foreach (var t in metodologias)
                    {
                        <option @(Model.Id_metodologia.Equals(t.Id_metodologia) ? "selected" : "")
                                value="@t.Nombre">
                            @t.Nombre
                        </option>
                    }
                </select>
                @Html.ValidationMessageFor(x => x.Id_metodologia, null, new { @class = "label label-danger" })
            </div>




        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-primary">GUARDAR</button>
            <a href="~/Fase" class="btn btn-danger">CANCELAR</a>
        </div>
        <br /><br /><br />


    </div>
}



