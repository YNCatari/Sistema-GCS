@model SistemaGCS.Models.Cronograma
@{ ViewBag.Title = "Agregar";
    List<SistemaGCS.Models.Proyecto> proyecto = ViewBag.Proyecto; }

<h2>Agregar / Editar</h2>

<nav class="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Proyecto/Index">Proyecto</a></li>
    </ol>
</nav>

@using (Html.BeginForm("Guardar", "Cronograma", FormMethod.Post, new { id = "frm-categoria" }))
{
@Html.HiddenFor(x => x.Id_cronograma)
                <div class="card">
                    <div class="card-header">Informacion del Cronograma</div>
                    <div class="card-body">


                        <div class="form-group">
                            @Html.LabelFor(x => x.Id_proyecto)
                            <select name="Id_proyecto" class="form-control">
                                <option @(Model.Id_proyecto.Equals("") ? "selected" : "") value="">--Seleccione Proyecto--</option>
                                @foreach (var t in proyecto)
                                {
                <option @(Model.Id_proyecto.Equals(t.Id_proyecto) ? "selected" : "")
                        value="@t.Id_proyecto">
                    @t.Nombre
                </option>}
                            </select>
                            @Html.ValidationMessageFor(x => x.Id_proyecto, null, new { @class = "label label-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.FechaInicio)
                            @Html.TextBoxFor(x => x.FechaInicio, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.FechaInicio, null, new { @class = "label label-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.FechaTermino)
                            @Html.TextBoxFor(x => x.FechaTermino, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.FechaTermino, null, new { @class = "label label-danger" })
                        </div>
                    </div>

                    <div class="text-right">
                        <button type="submit" class="btn btn-primary">GUARDAR</button>
                        <a href="~/Cronograma" class="btn btn-danger">CANCELAR</a>
                    </div>
                    <br /><br /><br />

                </div>}
