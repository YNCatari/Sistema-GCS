@model SistemaGCS.Models.Tipo_Usuario
@{
    ViewBag.Title = "Agregar";
}

<h2>Agregar / Editar</h2>

<nav class="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/TipoUsuario/Index">Tipo Usuario</a></li>
        <li class="breadcrumb-item active">@(Model.Id_tipousuario > 0 ? Model.Nombre : "Nuevo Registro")</li>
    </ol>
</nav>

@using (Html.BeginForm("Guardar", "TipoUsuario", FormMethod.Post, new { id = "frm-categoria" }))
{
    @Html.HiddenFor(x => x.Id_tipousuario)
    <div class="card">
        <div class="card-header">Informacion de Tipo Usuario</div>
        <div class="card-body">

            <div class="form-group">
                @Html.LabelFor(x => x.Nombre)
                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "label label-danger" })
            </div>

        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-primary">GUARDAR</button>
            <a href="~/TipoUsuario" class="btn btn-danger">CANCELAR</a>
        </div>
        <br /><br /><br />


    </div>
}
