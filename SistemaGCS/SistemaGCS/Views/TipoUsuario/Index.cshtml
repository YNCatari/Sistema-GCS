
@model List<SistemaGCS.Models.Tipo_Usuario>
@{
    ViewBag.Title = "Index";
}

<h2>Listado de Tipo Usuario</h2>
<h2 class="pagegeader">
    <a href="~/TipoUsuario/Agregar" class="btn btn-info text-right">Nuevo Registro</a>

</h2>
<br />
<br />
@using (Html.BeginForm("Index", "TipoUsuario", FormMethod.Post))
{

}

<table id="datatable" class="display" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@(m.Id_tipousuario)</td>
                <td>@(m.Nombre)</td>
                <td>
                    
                    <a href="~/TipoUsuario/Agregar/@m.Id_tipousuario" class="btn btn-success">EDITAR</a>
                    <a onclick="return confirm('Esta Seguro que desea eliminar el registro?')" href="~/TipoUsuario/Eliminar/@m.Id_tipousuario" class="btn btn-danger">ELIMINAR</a>

                </td>
            </tr>
        }
    </tbody>

</table>
